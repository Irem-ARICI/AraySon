@model List<Kategori>

<style>
    body {
        background-color: #FDE1E1;
    }
</style>

@Html.ActionLink("Yeni kategori ekle", "Ekle", "Kategori", null, new { @class = "btn btn-primary my-3", style = "background-color: #5D1414; color: white;" })


<div class="card">
    <div class="card-header">
        Kategoriler
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sıra No</th>
                    <th>Kategori</th>
                    <th></th>
                    <th></th> @* Yeni bir sütun ekledik *@
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Ad</td>
                        <td>
                            @Html.ActionLink("Düzenle", "Guncelle", "Kategori", new { id = Model[i].Id }, new { @class = "btn btn-warning", style = "background-color: #5D1414; color: white;" })
                        </td>
                        <td>
                            @Html.ActionLink("Sil", "Sil", "Kategori", new { id = Model[i].Id }, new { @class = "btn btn-danger", style = "background-color: #5D1414; color: white;" }) @* Yeni bir düğme ekledik *@
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<small>https://getbootstrap.com/docs/5.0/components/card/</small>
